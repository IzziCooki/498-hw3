<div class="container">
    <section class="form-section">
        <h2 class="section-title">Add a New PDF</h2>
        <form action="/add-pdf" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" placeholder="e.g., The Phoenix Project" required />
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="4" placeholder="A short summary of the document's content." required></textarea>
            </div>

            <div class="form-group">
                <label for="author">Author</label>
                <input type="text" id="author" name="author" placeholder="e.g., Gene Kim" required />
            </div>

            <div class="form-group">
                <label for="filename">Filename</label>
                <input type="text" id="filename" name="filename" placeholder="e.g., phoenix-project.pdf" required />
            </div>

            <div class="form-group">
                <label for="pdfFile">Upload PDF</label>
                <input type="file" id="pdfFile" name="pdfFile" accept="application/pdf" required />
                <p class="form-hint">Select the PDF file from your computer.</p>
            </div>

            <button type="submit" class="btn btn-primary">Upload PDF</button>
        </form>
    </section>
</div>
