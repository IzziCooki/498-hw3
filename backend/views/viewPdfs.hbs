<div class="container">
    <h2 class="section-title">PDF Library</h2>

    {{#if pdfs.length}}
        <div class="pdf-grid">
            {{#each pdfs}}
                <div class="pdf-card">
                    <div class="pdf-card-header">
                        <h3>{{#if title}}{{title}}{{else}}Untitled{{/if}}</h3>
                    </div>
                    <div class="pdf-card-body">
                        <p>{{#if subject}}{{subject}}{{else}}No subject available.{{/if}}</p>
                    </div>
                    <div class="pdf-card-footer">
                        <span class="pdf-author">{{#if author}}{{author}}{{else}}Unknown Author{{/if}}</span>
                        <div class="button-group">
                            <a href="/pdf/{{filename}}" class="btn btn-primary" target="_blank">View</a>
                            <a href="/pdf/download/{{filename}}" class="btn btn-secondary">Download</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <div class="text-center">
            <p>No PDFs have been uploaded yet. Why not add one?</p>
            <a href="/add-pdf" class="btn btn-primary mt-2">Add Your First PDF</a>
        </div>
    {{/if}}
</div>
